<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/peoplelist_adapter_cell_ll_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@color/colorPrimary"
        android:paddingTop="@dimen/peoplelista_adapter_cell_space"
        android:paddingBottom="@dimen/peoplelista_adapter_cell_space"
        android:gravity="center_vertical"
        android:orientation="horizontal"
>

    <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@mipmap/ic_launcher_round"
            android:id="@+id/peoplelist_adapter_cell_iv_photo"
            app:riv_oval="true"
    />

    <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
    >

        <TextView
                android:text="\@alineromero"
                android:textSize="@dimen/peoplelista_adapter_cell_nick"
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPicPayWhite"
                android:id="@+id/peoplelist_adapter_cell_tv_nick"
        />
        <TextView
                android:text="Alice Romero"
                android:textSize="@dimen/peoplelista_adapter_cell_name"
                android:layout_width="339dp"
                android:textColor="@color/colorPicPayGrayLight"
                android:layout_height="wrap_content"
                android:id="@+id/peoplelist_adapter_cell_tv_name"
        />
    </LinearLayout>
</LinearLayout>
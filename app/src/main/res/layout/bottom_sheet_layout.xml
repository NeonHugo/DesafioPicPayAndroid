<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/bottomSheet"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:elevation="4dp"
              android:background="@color/colorPicPayBlack"
              android:orientation="vertical"
              tools:ignore="UnusedAttribute">

    <LinearLayout
            android:id="@+id/transactionfragment_ll_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <View
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="50dp"
                android:layout_height="8dp"
                android:background="@drawable/border_res"
        />



        <TextView
                style="@style/MyStyleHeader.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transactionfragment_title"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
        />

        <LinearLayout
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:background="@color/colorPicPayGrayDark"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:id="@+id/transactionfragment_iv_photo"
                    app:riv_oval="true"
            />

            <TextView
                    android:id="@+id/transactionfragment_tv_name"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="\@zelda.willinas"
                    android:textColor="@color/colorPicPayWhite"
                    android:textStyle="bold"
                    android:textSize="24sp"
            />

            <TextView
                    android:id="@+id/transactionfragment_tv_time"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="15/12/2022 às 16:34"
                    android:textColor="@color/colorPicPayGrayLight"

                    android:textSize="18sp"
            />

            <TextView
                    android:id="@+id/transactionfragment_tv_code"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Transação: 230010"
                    android:textColor="@color/colorPicPayGrayLight"
                    android:textSize="18sp"
            />

            <View
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPicPayGrayLight"
            />

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/transactionfragment_tv_cn"
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Cartão Master 1234"
                        android:textColor="@color/colorPicPayWhite"
                        android:textSize="18sp"
                />


                <TextView
                        android:id="@+id/transactionfragment_tv_value"
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="right"
                        android:text="R$ 16,90"
                        android:textColor="@color/colorPicPayWhite"
                        android:textSize="18sp"
                />

            </LinearLayout>

            <View
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPicPayGrayLight"
            />

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/transactionfragment_tv_total"
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Total Pago"
                        android:textColor="@color/colorPicPayWhite"
                        android:textStyle="bold"
                        android:textSize="20sp"
                />


                <TextView
                        android:id="@+id/transactionfragment_tv_total_value"
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="right"
                        android:text="R$ 16,90"
                        android:textColor="@color/colorPicPayWhite"
                        android:textStyle="bold"
                        android:textSize="20sp"
                />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>